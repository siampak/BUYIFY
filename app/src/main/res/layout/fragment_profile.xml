<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.ProfileFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tbProfileFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_yellow"
        app:navigationIcon="@drawable/baseline_arrow_back_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:titleTextColor="@color/black"
        app:title="Profile"/>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1.30dp"
        app:layout_constraintTop_toBottomOf="@+id/tbProfileFragment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="#DAD4D4"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/_10sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My account"
            android:textStyle="bold"
            android:textSize="23.40sp"
            android:textColor="@color/black"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6.50dp"
            android:text="9999999999"
            android:textSize="19.50sp"
            android:textColor="@color/black"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="19.50dp"
            android:textAllCaps="true"
            android:text="Your Information"
            android:textSize="15.60sp"
            android:textColor="#6B6c74"/>

        <LinearLayout
            android:id="@+id/llOrders"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:layout_marginTop="13.00dp"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6.50dp"
                android:src="@drawable/baseline_backpack_24"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:text="Your Orders"
                android:layout_gravity="center"
                android:layout_marginStart="13.00dp"
                android:textSize="16.90sp"
                android:textColor="@color/black"
                />
            <ImageView
                android:layout_width="0dp"
                android:layout_height="26.00dp"
                android:layout_weight="0.1"
                android:src="@drawable/baseline_chevron_right_24"
                app:tint="@color/black"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:layout_marginVertical="19.50dp"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_location_city_24"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:text="Address Book"
                android:layout_gravity="center"
                android:layout_marginStart="13.00dp"
                android:textSize="16.90sp"
                android:textColor="@color/black"
                />
            <ImageView
                android:layout_width="0dp"
                android:layout_height="26.00dp"
                android:layout_weight="0.1"
                android:src="@drawable/baseline_chevron_right_24"
                app:tint="@color/black"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_logout_24"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:text="Log Out"
                android:layout_gravity="center"
                android:layout_marginStart="13.00dp"
                android:textSize="16.90sp"
                android:textColor="@color/black"
                />
            <ImageView
                android:layout_width="0dp"
                android:layout_height="26.00dp"
                android:layout_weight="0.1"
                android:src="@drawable/baseline_chevron_right_24"
                app:tint="@color/black"/>

        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>