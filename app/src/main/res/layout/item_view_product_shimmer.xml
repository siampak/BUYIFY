<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="2.60dp">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">


    <androidx.cardview.widget.CardView
        android:id="@+id/cvProduct1"
        android:layout_width="0dp"
        android:layout_height="@dimen/_240sdp"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="13.00dp"
        android:elevation="0dp"
        app:cardUseCompatPadding="true"
        android:layout_weight="0.5"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="13.00dp"
            android:orientation="vertical">

            <com.denzcoskun.imageslider.ImageSlider
                android:id="@+id/ivImageSlider1"
                android:layout_width="wrap_content"
                android:layout_height="156.00dp"
                app:iss_auto_cycle="false"
                android:background="#DDDDDD"
                app:iss_text_align="CENTER"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />
            <TextView
                android:id="@+id/tvProductTitle1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:layout_marginTop="@dimen/_7sdp"
                android:ellipsize="end"
                android:background="#DDDDDD"
                android:textSize="19.50sp"/>

            <TextView
                android:id="@+id/tvProductQuantity1"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:background="#DDDDDD"
                android:layout_marginTop="@dimen/_7sdp"
                android:textColor="#6F6F6F"
                android:textSize="15.60sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:id="@+id/tvProductPrice1"
                        android:layout_width="35dp"
                        android:layout_height="wrap_content"
                        android:background="#DDDDDD"
                        android:textColor="@color/black"
                        android:textSize="15.60sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        />
                    <TextView
                        android:id="@+id/tvAdd1"
                        android:layout_width="90.00dp"
                        android:layout_height="wrap_content"

                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:padding="5.20dp"
                        android:gravity="center"
                        android:background="@drawable/bg_add_button_without_color"
                        android:textSize="14.30sp"/>


                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/cvProduct2"
            android:layout_width="0dp"
            android:layout_height="@dimen/_240sdp"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="13.00dp"
            android:elevation="0dp"
            app:cardUseCompatPadding="true"
            android:layout_weight="0.5"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="13.00dp"
                android:orientation="vertical">

                <com.denzcoskun.imageslider.ImageSlider
                    android:id="@+id/ivImageSlider2"
                    android:layout_width="wrap_content"
                    android:layout_height="156.00dp"
                    app:iss_auto_cycle="false"
                    android:background="#DDDDDD"
                    app:iss_text_align="CENTER"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />
                <TextView
                    android:id="@+id/tvProductTitle2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:ellipsize="end"
                    android:background="#DDDDDD"
                    android:textSize="19.50sp"/>

                <TextView
                    android:id="@+id/tvProductQuantity2"
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:background="#DDDDDD"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:textColor="#6F6F6F"
                    android:textSize="15.60sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                        <TextView
                            android:id="@+id/tvProductPrice2"
                            android:layout_width="35dp"
                            android:layout_height="wrap_content"
                            android:background="#DDDDDD"
                            android:textColor="@color/black"
                            android:textSize="15.60sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            />
                        <TextView
                            android:id="@+id/tvAdd2"
                            android:layout_width="90.00dp"
                            android:layout_height="wrap_content"

                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:padding="5.20dp"
                            android:gravity="center"
                            android:background="@drawable/bg_add_button_without_color"
                            android:textSize="14.30sp"/>


                    </androidx.constraintlayout.widget.ConstraintLayout>
                </LinearLayout>

            </LinearLayout>


        </androidx.cardview.widget.CardView>



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>